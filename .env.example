# App Env
APP_ENV=local
SHORT_URL_LENGTH=8

# Server Env
PORT=3001
ALLOW_ORIGINS=http://*,https://*

# DB Env
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=
DB_SCHEMA=public

# Valkey Env
VALKEY_HOST=localhost
VALKEY_PORT=6379

# Rate Limiter
LIMITER_RPS=
LIMITER_BURST=

# OpenTelemetry
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=http://localhost:4317
# Trace sampling ratio (0.0 to 1.0). Default: 1.0 (100%)
# For production, consider 0.1 (10%) to 0.5 (50%)
OTEL_TRACES_SAMPLER_ARG=1.0

# Authentication
AUTH0_DOMAIN=
AUTH0_AUDIENCE=
AUTH0_CLIENT_ID=machine-to-machine auth0 client ID
AUTH0_CLIENT_SECRET=machine-to-machine auth0 client secret
